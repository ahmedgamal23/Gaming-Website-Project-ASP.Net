@model IEnumerable<Game>

@{
    ViewData["Title"] = "Games";
}

<a class="btn btn-outline-success btn-lg" asp-action="Create" asp-controller="Games">
    <i class="bi bi-plus-circle-dotted"></i>
    Add Game
</a>


@if (!Model.Any())
{
    <div class="alert alert-warning">
        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0"> No Game Exist <a href="#" class="alert-link">vel scelerisque nisl consectetur et</a>.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-bordered border-primary">
            <tbody>
                @foreach(var game in Model)
                {
                    <tr class="border-1 border-success">
                        <td>
                            <div class="d-flex">
                                <div class="pe-4">
                                    <img src="@($"{FileSettings.ImagePath}/{game.Cover}")" alt="@game.Name" style="max-width:90px;" />
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4 class="text-success-emphasis">@game.Name</h4>
                                    <h5 class="text-body-tertiary">@game.Category.Name</h5>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@game.Id">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a class="btn btn-danger rounded rounded-3 js-delete" data-id="@game.Id">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<script src="~/js/game-index.js" asp-append-version="true" ></script>
